<img onmouseover="big(this)" onmouseout="small(this)" src="https://media.giphy.com/media/2QvTI1MVAmkEg/giphy.gif">

<div style="font-family: Courier New, size: 100px, text-align: center" id="delayed" style="visibility:hidden">
Hello World!
</div>

<script>

function big(x){
  x.style.height *= 2
  x.style.width *= 2
}

function small(x){
  x.style.height /= 2
  x.style.height /= 2
}

window.onload = function(){
var timer = setTimeout("show()",3000)
}

function show(){
document.getElementById("delayed").style.visibility = "visible";
}
</script>


</html>
